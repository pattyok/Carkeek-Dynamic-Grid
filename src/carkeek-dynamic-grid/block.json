{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "carkeek-blocks/dynamic-grid",
	"version": "0.1.01",
	"title": "Dynamic Post Grid",
	"category": "widgets",
	"icon": "layout",
	"description": "Display and Filter Posts with a dynamic grid.",
	"example": {},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"className": true,
		"anchor": true,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"postTypeSelected": {
			"type": "string",
			"default": "post"
		},
		"taxonomySelected": {
			"type": "string"
		},
		"postsToShow": {
			"type": "number",
			"default": 6
		},
		"sortPostsBy": {
			"type": "string",
			"default": "date"
		},
		"sortPostsOrder": {
			"type": "string",
			"default": "desc"
		},
		"minImageWidth": {
			"type": "number",
			"default": 300
		},
		"showPagination": {
			"type": "boolean",
			"default": true
		},
		"showLoadMore": {
			"type": "boolean",
			"default": true
		},
		"showImage": {
			"type": "boolean",
			"default": true
		},
		"imageOrientation": {
			"type": "string",
			"default": "0.66"
		},
		"imageSize": {
			"type": "string",
			"default": ""
		},
		"showTitle": {
			"type": "boolean",
			"default": true
		},
		"showMeta": {
			"type": "boolean",
			"default": true
		},
		"metaFields": {
			"type": "array",
			"default": []
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showMetaAsOverlay": {
			"type": "boolean",
			"default": true
		},
		"gridGap": {
			"type": "number",
			"default": 3
		}
	},
	"textdomain": "carkeek-dynamic-grid",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
